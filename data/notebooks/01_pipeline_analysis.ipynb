## 1. Load Data

import pandas as pd

sales = pd.read_csv("sales_pipeline.csv")
accounts = pd.read_csv("accounts.csv")
products = pd.read_csv("products.csv")

sales.head()


## 2. Create win flag once (best practice)
sales["is_won"] = (sales["deal_stage"] == "Won").astype(int)
sales["won_value"] = sales["close_value"] * sales["is_won"]


## 3. Pipeline Overview (SQL parity)

pipeline_overview = pd.DataFrame({
    "total_deals": [len(sales)],
    "won_deals": [sales["is_won"].sum()],
    "win_rate": [sales["is_won"].mean()],
    "avg_close_value": [sales["close_value"].mean()],
    "total_won_value": [sales["won_value"].sum()],
})

pipeline_overview

## 4. Stage Funnel 

stage_counts = (
    sales.groupby("deal_stage")
    .size()
    .reset_index(name="deals")
    .sort_values("deals", ascending=False)
)

stage_counts["pct_of_total"] = stage_counts["deals"] / stage_counts["deals"].sum()
stage_counts


## 5. Sales Cycle Analysis

# Ensure date fields are datetime
sales["engage_date"] = pd.to_datetime(sales["engage_date"], errors="coerce")
sales["close_date"] = pd.to_datetime(sales["close_date"], errors="coerce")

# Only closed deals have a sales cycle
closed_deals = sales[sales["deal_stage"].isin(["Won", "Lost"])].copy()

# Calculate sales cycle in days
closed_deals["sales_cycle_days"] = (
    closed_deals["close_date"] - closed_deals["engage_date"]
).dt.days

closed_deals[["deal_stage", "sales_cycle_days"]].head()

# Overall sales cycle stats
sales_cycle_summary = closed_deals["sales_cycle_days"].describe()
sales_cycle_summary

# Sales cycle by outcome
cycle_by_outcome = (
    closed_deals
    .groupby("deal_stage")["sales_cycle_days"]
    .agg(["count", "mean", "median"])
    .reset_index()
)

cycle_by_outcome

# Flag long-cycle deals (e.g. above 75th percentile)
threshold = closed_deals["sales_cycle_days"].quantile(0.75)

long_cycle_deals = closed_deals[
    closed_deals["sales_cycle_days"] >= threshold
].sort_values("sales_cycle_days", ascending=False)

long_cycle_deals[[
    "sales_agent",
    "account",
    "product",
    "deal_stage",
    "sales_cycle_days"
]].head(10)



## Dashboard

kpi_cards = pd.DataFrame({
    "total_deals": [len(sales)],
    "won_deals": [sales["is_won"].sum()],
    "win_rate": [sales["is_won"].mean()],
    "avg_close_value": [sales["close_value"].mean()],
    "total_won_value": [sales["won_value"].sum()],
})

funnel_table = (
    sales.groupby("deal_stage")
    .size()
    .reset_index(name="deals")
    .sort_values("deals", ascending=False)
)

funnel_table["pct_of_total"] = funnel_table["deals"] / funnel_table["deals"].sum()

funnel_table


sales_cycle_dist = closed_deals[[
    "deal_stage", "sales_cycle_days", "sales_agent", "product", "account", "close_value"
]].copy()

sales_cycle_dist.head()


rep_perf = (
    sales.groupby("sales_agent")
    .agg(
        total_deals=("opportunity_id", "count"),
        won_deals=("is_won", "sum"),
        win_rate=("is_won", "mean"),
        avg_close_value=("close_value", "mean"),
        total_won_value=("won_value", "sum"),
    )
    .reset_index()
    .sort_values(["total_won_value", "win_rate"], ascending=False)
)

product_perf = (
    sales.groupby("product")
    .agg(
        total_deals=("opportunity_id", "count"),
        won_deals=("is_won", "sum"),
        win_rate=("is_won", "mean"),
        avg_close_value=("close_value", "mean"),
        total_won_value=("won_value", "sum"),
    )
    .reset_index()
    .sort_values(["total_won_value", "win_rate"], ascending=False)
)

